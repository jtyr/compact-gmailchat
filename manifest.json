{
  "manifest_version": 2,
  "name": "Compact Chat",
  "version": "1.8",
  "description": "Helps to make the Google Chat more compact.",
  "icons": {
    "48"  : "icons/icon-48.png",
    "128" : "icons/icon-128.png"
  },
  "options_page": "html/options.html",
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [ "http://mail.google.com/mail/*", "https://mail.google.com/mail/*", "http://talkgadget.google.com/talkgadget/*", "https://talkgadget.google.com/talkgadget/*" ],
      "js" : ["scripts/contentscript.js"],
      "run_at": "document_end"
    }
  ],
  "background": "html/background.html"
}